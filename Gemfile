source 'https://rubygems.org'

# Foundation
gem 'rails', '3.2.13'
gem 'rake'
gem 'heroku'
gem 'rack-rewrite'

# Views
gem 'haml', '~> 3.1.6'
gem 'haml-rails'
gem 'sass', '~> 3.1.19'
gem 'jquery-rails'

# Email
gem 'sendgrid'

# Ruby wrapper for Sendgrid API
gem 'sendgrid_toolkit', '>= 1.1.1'

# Run JavaScript code from Ruby
gem 'execjs'
# Embed the V8 JavaScript Interpreter into Ruby
gem 'therubyracer'

# OmniAuth
gem 'omniauth', '>= 1.1.0'

# OmniAuth-Twitter
gem 'omniauth-twitter'
gem 'twitter', '~> 4.7.0'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Ruby Debugger
group :development do
  gem 'letter_opener'
  gem 'debugger'
  gem 'factory_girl_rails', '~> 4.0'
end

# New Relic
gem 'newrelic_rpm'

# Database
gem 'mongo', '~> 1.8.6'
gem 'mongoid'
gem 'bson'
gem 'bson_ext'
