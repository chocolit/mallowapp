source 'https://rubygems.org'

# Foundation
gem 'rails', '3.2.0'
gem 'rake'
gem 'heroku'
gem 'rack-rewrite'

# Views
gem 'haml', '~> 3.1.6'
gem 'haml-rails'
gem 'sass', '~> 3.1.19'
gem 'jquery-rails'

# Email
gem 'sendgrid'

# Run JavaScript code from Ruby
gem 'execjs'
# Embed the V8 JavaScript Interpreter into Ruby
gem 'therubyracer'

# OmniAuth
gem 'omniauth', '>= 1.1.0'

# OmniAuth-Twitter
gem 'omniauth-twitter'
gem "twitter", "~> 3.7.0"

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

# Ruby Debugger
group :development do
  gem 'letter_opener'
  gem 'ruby-debug19', :require => 'ruby-debug'
end

# New Relic 
gem 'newrelic_rpm'

# Database
gem 'mongo', '~> 1.5.2'
gem 'mongoid'
gem 'bson'
gem 'bson_ext'
